@model SAConfig.Models.saconfig_Authentication

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Authentication Attributes</legend>

        @Html.HiddenFor(model => model.ID)

        <div class="editor-label">
            @Html.LabelFor(model => model.none)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.none)
            @Html.ValidationMessageFor(model => model.none)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.password)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.password)
            @Html.ValidationMessageFor(model => model.password)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.weak)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.weak)
            @Html.ValidationMessageFor(model => model.weak)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.strong)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.strong)
            @Html.ValidationMessageFor(model => model.strong)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.certificate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.certificate)
            @Html.ValidationMessageFor(model => model.certificate)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Server, "Server")
        </div>
        <div class="editor-field">
            @Html.DropDownList("Server", String.Empty)
            @Html.ValidationMessageFor(model => model.Server)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

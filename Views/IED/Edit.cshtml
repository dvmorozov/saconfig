@model SAConfig.Models.saconfig_tIED

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<p>
    @Html.ActionLink("Services", "ServicesList", new { id = Model.ID, sclID = (long)ViewBag.SCLID, backURL = (string)ViewBag.BackURL }) |
    @Html.ActionLink("AccessPoint", "AccessPointList", new { id = Model.ID, sclID = (long)ViewBag.SCLID, backURL = (string)ViewBag.BackURL })
</p>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>IED Attributes</legend>

        @Html.HiddenFor(model => model.ID)
        @Html.Hidden("sclID", (long)ViewBag.SCLID)

        <div class="editor-label">
            @Html.LabelFor(model => model.name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.name)
            @Html.ValidationMessageFor(model => model.name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.type)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.type)
            @Html.ValidationMessageFor(model => model.type)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.desc)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.desc)
            @Html.ValidationMessageFor(model => model.desc)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.manufacturer)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.manufacturer)
            @Html.ValidationMessageFor(model => model.manufacturer)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.configVersion)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.configVersion)
            @Html.ValidationMessageFor(model => model.configVersion)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.originalSclVersion)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.originalSclVersion)
            @Html.ValidationMessageFor(model => model.originalSclVersion)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.originalSclRevision)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.originalSclRevision)
            @Html.ValidationMessageFor(model => model.originalSclRevision)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.engRight, "engRight")
        </div>
        <div class="editor-field">
            @Html.DropDownList("engRight", String.Empty)
            @Html.ValidationMessageFor(model => model.engRight)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.owner)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.owner)
            @Html.ValidationMessageFor(model => model.owner)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.SCL, "SCL")
        </div>
        <div class="editor-field">
            @Html.DropDownList("SCL", String.Empty)
            @Html.ValidationMessageFor(model => model.SCL)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    <a href="@Html.Raw((String)(ViewBag.BackURL))">Back to Upper Element</a>
</div>

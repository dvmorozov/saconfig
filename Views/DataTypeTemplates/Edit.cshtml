@model SAConfig.Models.saconfig_tDataTypeTemplates

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<p>
    @Html.ActionLink("LNodeType", "Index", "LNodeType") |
    @Html.ActionLink("DOType", "Index", "DOType") |
    @Html.ActionLink("DAType", "Index", "DAType") |
    @Html.ActionLink("EnumType", "Index", "EnumType")
</p>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>DataTypeTemplates Attributes</legend>

        @Html.HiddenFor(model => model.ID)
        @Html.Hidden("sclID", (long)ViewBag.SCLID)

        <div class="editor-label">
            @Html.LabelFor(model => model.SCL, "SCL")
        </div>
        <div class="editor-field">
            @Html.DropDownList("SCL", String.Empty)
            @Html.ValidationMessageFor(model => model.SCL)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    <a href="@Html.Raw((String)(ViewBag.BackURL))">Back to Upper Element</a>
</div>

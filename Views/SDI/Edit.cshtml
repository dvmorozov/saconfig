@model SAConfig.Models.saconfig_tSDI

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<p>
    @Html.ActionLink("DAI", "Index", "DAI") |
    @Html.ActionLink("SDI", "Index", "SDI")
</p>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>SDI Attributes</legend>

        @Html.HiddenFor(model => model.ID)

        <div class="editor-label">
            @Html.LabelFor(model => model.desc)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.desc)
            @Html.ValidationMessageFor(model => model.desc)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.name, "name")
        </div>
        <div class="editor-field">
            @Html.DropDownList("name", String.Empty)
            @Html.ValidationMessageFor(model => model.name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ix)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ix)
            @Html.ValidationMessageFor(model => model.ix)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.SD, "SDI (owner)")
        </div>
        <div class="editor-field">
            @Html.DropDownList("SD", String.Empty)
            @Html.ValidationMessageFor(model => model.SD)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DOI, "DOI")
        </div>
        <div class="editor-field">
            @Html.DropDownList("DOI", String.Empty)
            @Html.ValidationMessageFor(model => model.DOI)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.OwnerType, "Owner Type")
        </div>
        <div class="editor-field">
            @Html.DropDownList("OwnerType", String.Empty)
            @Html.ValidationMessageFor(model => model.OwnerType)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

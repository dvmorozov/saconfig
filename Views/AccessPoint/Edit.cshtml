@model SAConfig.Models.saconfig_tAccessPoint

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<p>
    @Html.ActionLink("ServerAt", "ServerAtList", new { id = Model.ID, iedID = (long)ViewBag.IEDID, backURL = (string)ViewBag.BackURL }) |
    @Html.ActionLink("Server", "ServerList", new { id = Model.ID, iedID = (long)ViewBag.IEDID, backURL = (string)ViewBag.BackURL }) |
    @Html.ActionLink("LN", "Index", "LN") |
    @Html.ActionLink("GOOSESecurity", "CertificateList", new { id = Model.ID, iedID = (long)ViewBag.IEDID, backURL = (string)ViewBag.BackURL, elementName = "GOOSESecurity" }) |
    @Html.ActionLink("SMVSecurity", "CertificateList", new { id = Model.ID, iedID = (long)ViewBag.IEDID, backURL = (string)ViewBag.BackURL, elementName = "SMVSecurity" }) |
    @Html.ActionLink("Services", "ServicesList", new { id = Model.ID, iedID = (long)ViewBag.IEDID, backURL = (string)ViewBag.BackURL })
</p>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>AccessPoint Attributes</legend>

        @Html.HiddenFor(model => model.ID)
        @Html.Hidden("iedID", (long)ViewBag.IEDID)
        @Html.Hidden("backURL", (string)ViewBag.BackURL)

        <div class="editor-label">
            @Html.LabelFor(model => model.desc)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.desc)
            @Html.ValidationMessageFor(model => model.desc)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.name)
            @Html.ValidationMessageFor(model => model.name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.router)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.router)
            @Html.ValidationMessageFor(model => model.router)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.clock)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.clock)
            @Html.ValidationMessageFor(model => model.clock)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.IED, "IED")
        </div>
        <div class="editor-field">
            @Html.DropDownList("IED", String.Empty)
            @Html.ValidationMessageFor(model => model.IED)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    <a href="@Html.Raw((String)(ViewBag.BackURL))">Back to Upper Element</a>
</div>

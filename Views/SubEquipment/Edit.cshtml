@model SAConfig.Models.saconfig_tSubEquipment

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<p>
    @Html.ActionLink("LNode", "Index", "LNode")
</p>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>SubEquipment Attributes</legend>

        @Html.HiddenFor(model => model.ID)

        <div class="editor-label">
            @Html.LabelFor(model => model.phase)
        </div>
        <div class="editor-field">
            @Html.DropDownList("phase", String.Empty)
            @Html.ValidationMessageFor(model => model.phase)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.virtual_, "virtual")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.virtual_)
            @Html.ValidationMessageFor(model => model.virtual_)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.TransformerWinding)
        </div>
        <div class="editor-field">
            @Html.DropDownList("TransformerWinding", String.Empty)
            @Html.ValidationMessageFor(model => model.TransformerWinding)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ConductingEqupment)
        </div>
        <div class="editor-field">
            @Html.DropDownList("ConductingEqupment", String.Empty)
            @Html.ValidationMessageFor(model => model.ConductingEqupment)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.OwnerType, "Owner Type")
        </div>
        <div class="editor-field">
            @Html.DropDownList("OwnerType", String.Empty)
            @Html.ValidationMessageFor(model => model.OwnerType)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
